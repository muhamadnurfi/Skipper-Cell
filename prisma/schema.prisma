generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(uuid())
  fullName    String
  email       String   @unique
  password    String
  phoneNumber String
  role        Role   @default(USER)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Category {
  id          String @id @default(uuid())
  name        String @unique
  products    Product[]

  createdAt   DateTime  @default(now())
  updateAt    DateTime  @updatedAt
}

model Product {
  id          String @id @default(uuid())
  name        String @unique
  description String?
  price       Float
  stock       Int
  imageUrl    String?

  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id])

  createdAt   DateTime  @default(now())
  updateAt    DateTime  @updatedAt
}

enum Role {
  USER
  ADMIN
}
